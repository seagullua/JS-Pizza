<% include common/orderHeader.ejs %>
<% include common/header.ejs %>

<div class="buy-info">
    <div class="top-part">

    </div>
    <div id="cart" class="main-part">
    </div>
    <div class="bottom-part">
        <div class="row sum">
        </div>
        <div class="col-xs-12 lastcol">
            <a href="/" class="order_button" ><span class="btn btn-default button">Редагувати замовлення</span></a>
        </div>
    </div>
</div>
<div class="main-pizza">
    <div class="inner-container">
        <div class="contact-form">
            <div class="form">
                <h3>1. Контактні дані</h3>
            </div>
            <div class="row">
                <div class="col-xs-12 col-md-7">
                    <div class="col-xs-12">
                        <form class="form-horizontal">
                            <div class="form-group form-group-md name-form">
                                <label class="col-xs-2 control-label">Ім'я</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control name" id="inputName" placeholder="Ім'я Фамілія" aria-describedby="helpName">
                                    <span id="helpName" class="help-block">Введіть тільки власне ім’я, без цифр</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-xs-12">
                        <form class="form-horizontal">
                            <div class="form-group form-group-md phone-form">
                                <label class="col-xs-2 control-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control phone" id="inputPhone" placeholder="+380632267333">
                                    <span id="helpPhone" class="help-block">Введіть номер телефону у форматі +380 або почніть з 0</span>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-xs-12">
                        <form class="form-horizontal">
                            <div class="form-group form-group-md address-form">
                                <label class="col-xs-2 control-label">Адрес</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control address" id="inputAddress" placeholder="Київ, вул. Спаська, 2">
                                    <span id="helpAddress" class="help-block">Введіть адресу доставки піци в межах Києва</span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-xs-12 col-md-5">
                    <div class="bs-callout bs-callout-warning">
                        <h4>Інформація про замовлення</h4>
                        <p><strong>Приблизний час доставки: </strong><span class="shipping-time">невідомий</span></p>
                        <p><strong>Адреса доставки: </strong><span class="shipping-address">невідома</span></p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 accept">
                    <span class="btn btn-warning accept-button">Далі<span class="glyphicon glyphicon-chevron-right"></span></span>
                </div>
            </div>
        </div>
        <div id="maps"></div>
    </div>
</div>

